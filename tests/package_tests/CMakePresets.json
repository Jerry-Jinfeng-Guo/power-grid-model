{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Package Test Base",
      "description": "Base for all package integration tests.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "power_grid_model_DIR": "${sourceDir}/../../install/${presetName}/lib/cmake/power_grid_model"
      },
      "hidden": true
    },
    {
      "name": "release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      },
      "hidden": true
    },
    {
      "name": "debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "hidden": true
    },
    {
      "name": "windows-base",
      "description": "Target Windows platform.",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "inherits": "base"
    },
    {
      "name": "linux-base",
      "description": "Target Linux platform.",
      "hidden": true,
      "environment": {
        "PATH": "$penv{PATH}:/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "inherits": "base"
    },
    {
      "name": "macos-base",
      "description": "Target MacOS platform.",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "inherits": "base"
    },
    {
      "name": "msvc-base",
      "description": "Target Windows using the MSVC compiler.",
      "hidden": true,
      "environment": {
        "CC": "cl.exe",
        "CXX": "cl.exe"
      },
      "inherits": "windows-base"
    },
    {
      "name": "clang-cl-base",
      "description": "Target Windows using Clang with CL-like command line.",
      "hidden": true,
      "environment": {
        "CC": "clang-cl.exe",
        "CXX": "clang-cl.exe"
      },
      "inherits": "windows-base"
    },
    {
      "name": "msvc-debug",
      "displayName": "Debug (MSVC)",
      "inherits": [
        "msvc-base",
        "debug"
      ]
    },
    {
      "name": "msvc-release",
      "displayName": "Release (MSVC)",
      "inherits": [
        "msvc-base",
        "release"
      ]
    },
    {
      "name": "clang-cl-debug",
      "displayName": "Debug (Clang CL)",
      "inherits": [
        "clang-cl-base",
        "debug"
      ]
    },
    {
      "name": "clang-cl-release",
      "displayName": "Release (Clang CL)",
      "inherits": [
        "clang-cl-base",
        "release"
      ]
    },
    {
      "name": "ci-linux-clang-release",
      "inherits": [
        "linux-base",
        "release"
      ]
    },
    {
      "name": "ci-linux-clang-debug",
      "inherits": [
        "linux-base",
        "debug"
      ]
    },
    {
      "name": "ci-linux-gcc-release",
      "inherits": [
        "linux-base",
        "release"
      ]
    },
    {
      "name": "ci-linux-gcc-debug",
      "inherits": [
        "linux-base",
        "debug"
      ]
    },
    {
      "name": "ci-macos-clang-release",
      "inherits": [
        "macos-base",
        "release"
      ]
    },
    {
      "name": "ci-macos-clang-debug",
      "inherits": [
        "macos-base",
        "debug"
      ]
    },
    {
      "name": "ci-sonar",
      "inherits": [
        "linux-base",
        "debug"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "clang-cl-debug",
      "configurePreset": "clang-cl-debug"
    },
    {
      "name": "clang-cl-release",
      "configurePreset": "clang-cl-release"
    },
    {
      "name": "ci-linux-clang-debug",
      "configurePreset": "ci-linux-clang-debug"
    },
    {
      "name": "ci-linux-clang-release",
      "configurePreset": "ci-linux-clang-release"
    },
    {
      "name": "ci-linux-gcc-debug",
      "configurePreset": "ci-linux-gcc-debug"
    },
    {
      "name": "ci-linux-gcc-release",
      "configurePreset": "ci-linux-gcc-release"
    },
    {
      "name": "ci-macos-clang-debug",
      "configurePreset": "ci-macos-clang-debug"
    },
    {
      "name": "ci-macos-clang-release",
      "configurePreset": "ci-macos-clang-release"
    },
    {
      "name": "ci-sonar",
      "configurePreset": "ci-sonar"
    }
  ]
}