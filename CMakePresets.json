{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base",
      "description": "Base for all presets.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cpp_build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "environment": {
        "PLATFORM_C_FLAGS": "",
        "PLATFORM_CXX_FLAGS": "$env{PLATFORM_C_FLAGS}",
        "COMPILER_C_FLAGS": "",
        "COMPILER_CXX_FLAGS": "$env{COMPILER_C_FLAGS}",
        "CFLAGS": "$penv{CFLAGS} $env{PLATFORM_C_FLAGS} $env{COMPILER_C_FLAGS} $env{COVERAGE_FLAGS} $env{SANITIZER_FLAGS}",
        "CXXFLAGS": "$penv{CXXFLAGS} $env{PLATFORM_CXX_FLAGS} $env{COMPILER_CXX_FLAGS} $env{COVERAGE_FLAGS} $env{SANITIZER_FLAGS}"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "hidden": true
    },
    {
      "name": "release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      },
      "hidden": true
    },
    {
      "name": "debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "hidden": true
    },
    {
      "name": "unix-base",
      "description": "Target Unix platform.",
      "hidden": true,
      "environment": {
        "PLATFORM_C_FLAGS": "-Wall -Wextra -pedantic -Werror -Wno-deprecated-declarations",
        "PLATFORM_CXX_FLAGS": "$env{PLATFORM_C_FLAGS} -Wno-deprecated-copy"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "inherits": "base"
    },
    {
      "name": "windows-base",
      "description": "Target Windows platform.",
      "hidden": true,
      "environment": {
        "PreferredToolArchitecture": "x64",
        "PLATFORM_C_FLAGS": "/DWIN32 /D_WINDOWS /W3 /WX /GR /EHsc /utf-8 /bigobj /FC"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "inherits": "base",
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "msvc-base",
      "description": "Target Windows using the MSVC compiler.",
      "hidden": true,
      "environment": {
        "CC": "cl.exe",
        "CXX": "cl.exe"
      },
      "inherits": "windows-base"
    },
    {
      "name": "clang-cl-base",
      "description": "Target Windows using Clang with CL-like command line.",
      "hidden": true,
      "environment": {
        "CC": "clang-cl.exe",
        "CXX": "clang-cl.exe",
        "CXXFLAGS": "$penv{CXXFLAGS} -Wno-uninitialized-const-reference"
      },
      "inherits": "windows-base"
    },
    {
      "name": "unix-coverage",
      "environment": {
        "COVERAGE_FLAGS": "-fprofile-arcs -ftest-coverage"
      },
      "inherits": "unix-base",
      "hidden": true
    },
    {
      "name": "unix-sanitizer",
      "environment": {
        "SANITIZER_FLAGS": "-fsanitize=address"
      },
      "inherits": "unix-base",
      "hidden": true
    },
    {
      "name": "unix-coverage-sanitizer",
      "inherits": [
        "unix-sanitizer",
        "unix-coverage"
      ],
      "hidden": true
    },
    {
      "name": "msvc-debug",
      "displayName": "Debug (MSVC)",
      "inherits": [
        "msvc-base",
        "debug"
      ]
    },
    {
      "name": "msvc-release",
      "displayName": "Release (MSVC)",
      "inherits": [
        "msvc-base",
        "release"
      ]
    },
    {
      "name": "clang-cl-debug",
      "displayName": "Debug (Clang CL)",
      "inherits": [
        "clang-cl-base",
        "debug"
      ]
    },
    {
      "name": "clang-cl-release",
      "displayName": "Release (Clang CL)",
      "inherits": [
        "clang-cl-base",
        "release"
      ]
    },
    {
      "name": "ci-unix-release",
      "inherits": [
        "release",
        "unix-sanitizer"
      ],
      "hidden": true
    },
    {
      "name": "ci-unix-debug",
      "inherits": [
        "debug",
        "unix-coverage-sanitizer"
      ],
      "hidden": true
    },
    {
      "name": "ci-clang-release",
      "inherits": [
        "ci-unix-release"
      ]
    },
    {
      "name": "ci-clang-debug",
      "inherits": [
        "ci-unix-debug"
      ]
    },
    {
      "name": "ci-gcc-release",
      "environment": {
        "COMPILER_CXX_FLAGS": "$env{COMPILER_C_FLAGS} -Wno-maybe-uninitialized"
      },
      "inherits": [
        "ci-unix-release"
      ]
    },
    {
      "name": "ci-gcc-debug",
      "environment": {
        "COMPILER_CXX_FLAGS": "$env{COMPILER_C_FLAGS} -Wno-maybe-uninitialized"
      },
      "inherits": [
        "ci-unix-debug"
      ]
    },
    {
      "name": "ci-sonar",
      "inherits": [
        "unix-coverage",
        "debug"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "clang-cl-debug",
      "configurePreset": "clang-cl-debug"
    },
    {
      "name": "clang-cl-release",
      "configurePreset": "clang-cl-release"
    },
    {
      "name": "ci-clang-debug",
      "configurePreset": "ci-clang-debug"
    },
    {
      "name": "ci-clang-release",
      "configurePreset": "ci-clang-release"
    },
    {
      "name": "ci-gcc-debug",
      "configurePreset": "ci-gcc-debug"
    },
    {
      "name": "ci-gcc-release",
      "configurePreset": "ci-gcc-release"
    },
    {
      "name": "ci-sonar",
      "configurePreset": "ci-sonar"
    }
  ],
  "testPresets": [
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "msvc-release",
      "configurePreset": "msvc-release"
    },
    {
      "name": "clang-cl-debug",
      "configurePreset": "clang-cl-debug"
    },
    {
      "name": "clang-cl-release",
      "configurePreset": "clang-cl-release"
    },
    {
      "name": "ci-clang-debug",
      "configurePreset": "ci-clang-debug"
    },
    {
      "name": "ci-clang-release",
      "configurePreset": "ci-clang-release"
    },
    {
      "name": "ci-gcc-debug",
      "configurePreset": "ci-gcc-debug"
    },
    {
      "name": "ci-gcc-release",
      "configurePreset": "ci-gcc-release"
    },
    {
      "name": "ci-sonar",
      "configurePreset": "ci-sonar"
    }
  ]
}